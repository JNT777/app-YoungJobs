<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/main">

    <ImageView
        android:id="@+id/back_button_candidato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/back_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_candidato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Candidato"
        android:textColor="@color/white"
        android:layout_marginTop="4dp"
        android:textSize="32sp"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/back_button_candidato" />



    <EditText
        android:id="@+id/et_nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome Completo:"
        android:padding="8dp"
        android:background="@drawable/main_custom_button"
        android:layout_marginTop="4dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/txt_candidato"
        />

    <EditText
        android:id="@+id/et_telefone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Telefone:"
        android:padding="8dp"
        android:background="@drawable/main_custom_button"
        android:layout_marginTop="4dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/et_nome"
        />

    <EditText
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="E-mail:"
        android:inputType="textEmailAddress"
        android:padding="8dp"
        android:background="@drawable/main_custom_button"
        android:layout_marginTop="4dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/et_telefone"
        />

    <EditText
        android:id="@+id/et_senha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Senha:"
        android:inputType="textPassword"
        android:padding="8dp"
        android:background="@drawable/main_custom_button"
        android:layout_marginTop="4dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/et_email"
        />

    <EditText
        android:id="@+id/et_confirmar_senha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Confirmar senha:"
        android:inputType="textPassword"
        android:padding="8dp"
        android:background="@drawable/main_custom_button"
        android:layout_marginTop="4dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/et_senha"
        />

    <EditText
        android:id="@+id/et_cpf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="CPF:"
        android:inputType="number"
        android:padding="8dp"
        android:background="@drawable/main_custom_button"
        android:layout_marginTop="4dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/et_confirmar_senha"
        />

    <EditText
        android:id="@+id/et_nascimento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Data de Nascimento:"
        android:inputType="date"
        android:padding="8dp"
        android:background="@drawable/main_custom_button"
        android:layout_marginTop="4dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/et_cpf"
        />

    <EditText
        android:id="@+id/et_cep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="CEP"
        android:inputType="number"
        android:padding="8dp"
        android:background="@drawable/main_custom_button"
        android:layout_marginTop="4dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/et_nascimento"
        />

    <EditText
        android:id="@+id/et_rua_numero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Rua/NÃºmero:"
        android:inputType="text"
        android:padding="8dp"
        android:background="@drawable/main_custom_button"
        android:layout_marginTop="4dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/et_cep"
        />

    <EditText
        android:id="@+id/et_bairro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Bairro:"
        android:padding="8dp"
        android:background="@drawable/main_custom_button"
        android:layout_marginTop="4dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/et_rua_numero"
        />

    <EditText
        android:id="@+id/et_cidade_estado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cidade/Estado:"
        android:padding="8dp"
        android:background="@drawable/main_custom_button"
        android:layout_marginTop="4dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/et_bairro"
        />

    <androidx.appcompat.widget.AppCompatButton
    android:id="@+id/btn_cadastro_candidato"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/login_cadastro_custom_button"
    android:text="ENVIAR"
    android:textColor="@color/button_text"
    android:layout_marginTop="18dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    app:layout_constraintTop_toBottomOf="@id/et_cidade_estado"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    />


</androidx.constraintlayout.widget.ConstraintLayout>